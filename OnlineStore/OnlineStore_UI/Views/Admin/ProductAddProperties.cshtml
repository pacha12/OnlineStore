@model OnlineStore_UI.Models.ProductViewModel




<form asp-action="ProductAddWithProperties">
    <input name="Name" hidden="hidden" value="@Model.Name" />
    <input name="ImagePath" hidden="hidden" value="@Model.ImagePath" />
    <input name="Category" hidden="hidden" value="@Model.Category" />
    <input name="Cost" hidden="hidden" value="@Model.Cost " />
    <input name="Count" hidden="hidden" value="@Model.Count" />
    <input name="Description" hidden="hidden" value="@Model.Description" />
    <input name="Discount" hidden="hidden" value="@Model.Discount" />
    @for (int i = 0; i < Model.CountProperties; i++)
    {
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="NameProperties">Name properties</label>
                <input type="text" class="form-control" name="ProductPropertiesName" id="NameProperties">
            </div>
            <div class="col-md-6 mb-3">
                <label for="ValueProperties">Value properties</label>
                <input type="text" class="form-control" name="ProductPropertiesValue" id="ValueProperties">
            </div>
        </div>
    }
    <button type="submit">Add product</button>
</form>
